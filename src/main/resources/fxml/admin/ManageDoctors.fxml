<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.StackedBarChart?>
<BorderPane fx:id="doctorcontainer" fx:controller="org.example.project.hospitalmanagementsystem.controller.admin.ManageDoctorController" xmlns:fx="http://javafx.com/fxml">
    <top>
        <HBox spacing="10"><padding><Insets top="10"/> </padding>
            <TextField fx:id="searchField" promptText="Search doctors..."/>
            <!-- Maybe add filter buttons here -->
        </HBox>
        <HBox alignment="CENTER_RIGHT" spacing="10">
            <Button text="Add New Doctor" styleClass="primary-button" onAction="#handleAddNewDoctor"/>
            <Button text="Back" styleClass="primary-button" onAction="#goBack"/>
        </HBox>

    </top>

    <center>
        <ScrollPane fx:id="scrollPane" fitToWidth="true">
            <FlowPane  fx:id="cardContainer" hgap="20" vgap="20" /><padding><Insets top="10"/> </padding>
        </ScrollPane>

    </center>

    <bottom>
        <VBox spacing="10" ><padding><Insets top="10"/> </padding>
            <Label text="Doctor Salary Overview" style="-fx-font-weight: bold;"/>
            <StackedBarChart fx:id="salaryChart" prefWidth="600" prefHeight="400" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
                <xAxis>
                    <CategoryAxis fx:id="categoryAxis" label="Doctor"/>
                </xAxis>
                <yAxis>
                    <NumberAxis fx:id="numberAxis" label="Value"/>
                </yAxis>
            </StackedBarChart>
        </VBox>
    </bottom>
</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="parentPane" xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.project.hospitalmanagementsystem.controller.admin.ManageDepartmentController">
    <children>

<BorderPane  stylesheets="@../../css/forms.css" >

    <top>
        <VBox spacing="10" ><padding><Insets top="15"/> </padding>
            <HBox alignment="BOTTOM_RIGHT" >
            </HBox>
            <HBox spacing="10" >
                <TextField fx:id="searchField"  onKeyReleased="#onSearch" promptText="Search departments..." HBox.hgrow="ALWAYS"/>
                <ComboBox fx:id="filterCombo"  onAction="#onFilterChanged" prefWidth="150"/>
                <Button text="Add Department" onAction="#onAddDepartment"/>
                <Button text="â† Back" onAction="#goBackToAdmin"/>

            </HBox>

            <HBox spacing="20">
                <Label fx:id="totalDepartmentsLabel" style="-fx-font-weight: bold;"/>
                <Label fx:id="mostVisitedLabel" style="-fx-font-weight: bold;"/>
                <Label fx:id="mostDoctorsLabel" style="-fx-font-weight: bold;"/>


            </HBox>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true"><padding><Insets top="15"/> </padding>
            <TilePane fx:id="departmentTilePane" hgap="15" vgap="15" prefTileWidth="255" />
        </ScrollPane>
    </center>

</BorderPane>
    </children>
</AnchorPane>
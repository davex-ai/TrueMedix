<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane fx:id="contentPane" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.project.hospitalmanagementsystem.controller.admin.Admin"
            prefWidth="1400" prefHeight="800"
            stylesheets="@../../css/admin-home.css">

    <!-- Sidebar -->
    <VBox fx:id="sidebar" spacing="50" alignment="TOP_CENTER"
          AnchorPane.leftAnchor="0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
          prefWidth="250" styleClass="sidebar">

        <Label  text="Admin Panel" styleClass="sidebar-title" style="-fx-text-fill: white;"/>
         <Button text="Manage Doctors" styleClass="sidebar-button" onAction="#manageDoctors" />
        <Button text="Manage Patients" styleClass="sidebar-button" onAction="#managePatients" />
        <Button text="Appointments" styleClass="sidebar-button" onAction="#viewAppointments" />
        <Button text="Departments" styleClass="sidebar-button" onAction="#viewDepartments" />
        <Button text="Complaints" styleClass="sidebar-button" onAction="#viewComplaints" />
    </VBox>

    <!-- Main Content -->
    <VBox spacing="30"  AnchorPane.leftAnchor="250" AnchorPane.topAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">
        <padding><Insets top="30"/> </padding>
        <!-- Header -->
        <HBox alignment="CENTER_RIGHT" spacing="20">
            <Label fx:id="adminNameLabel" text="Welcome, Admin" styleClass="admin-welcome" />
            <Button fx:id="notificationButton" text="ðŸ””" styleClass="header-button" />
        </HBox>

        <!-- Dashboard Cards -->
        <HBox spacing="40" alignment="CENTER">
            <VBox alignment="CENTER" styleClass="card">
                <Label text="Total Patients" styleClass="card-title" />
                <Label fx:id="patientCountLabel" text="4" styleClass="card-value" />
            </VBox>
            <VBox alignment="CENTER" styleClass="card">
                <Label text="Appointments Today" styleClass="card-title" />
                <Label fx:id="appointmentCountLabel" text="0" styleClass="card-value" />
            </VBox>
            <VBox alignment="CENTER" styleClass="card">
                <Label text="Available Doctors" styleClass="card-title" />
                <Label fx:id="doctorCountLabel" text="0" styleClass="card-value" />
            </VBox>
        </HBox>
    </VBox>
</AnchorPane>
